{
  "private": true,
  "scripts": {
    "build": "pnpm --filter vssue... build",
    "build:docs": "pnpm --filter docs build",
    "dev": "pnpm --filter vssue dev",
    "dev:docs": "pnpm --filter docs dev",
    "postinstall": "pnpm --filter @vssue/* build",
    "lint": "eslint --ext .js,.ts,.vue packages/",
    "lint:fix": "eslint --ext .js,.ts,.vue packages/ --fix",
    "release": "node scripts/release.js",
    "staging": "pnpm --filter vssue staging",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.31.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@commitlint/config-lerna-scopes": "^8.3.6",
    "@types/jest": "^24.0.25",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.28.0",
    "execa": "^1.0.0",
    "husky": "^2.7.0",
    "jest": "^24.8.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.1.7",
    "rimraf": "^2.6.3",
    "sort-package-json": "^1.57.0",
    "ts-jest": "^24.2.0",
    "typescript": "^4.9.3"
  }
}
